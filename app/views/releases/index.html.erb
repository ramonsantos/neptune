<p id="notice"><%= notice %></p>

<h1>Releases</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>Finish date</th>
      <th>Active</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.name %></td>
        <td><%= release.start_date %></td>
        <td><%= release.finish_date %></td>
        <td><%= release.active %></td>
        <td><%= release.project_id %></td>
        <td><%= link_to 'Show', release_path(release.project_id, release.id) %></td>
        <td><%= link_to 'Edit', edit_release_path(release.project_id, release.id) %></td>
        <td><%= link_to 'Destroy', release_path(release.project_id, release.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Release', new_release_path %>
